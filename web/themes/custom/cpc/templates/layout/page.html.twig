{% if (page.breadcrumb) or (page.highlighted) %}
  <div class="grid-container">
    <div class="grid-row grid-gap">
      <div class="tablet:grid-col-12">
        {{ page.breadcrumb }}
        {{ page.highlighted }}
      </div>
    </div>
  </div>
{% endif %}

{% if page.help|render|trim %}
  <div class="usa-alert usa-alert--info">
    <div class="usa-alert__body">
      <p class="usa-alert__text">
        {{ page.help }}
      </p>
    </div>
  </div>
{% endif %}

<main class="usa-layout-docs usa-section" id="main-content">

  <div class="grid-container">
    <div class="{{ main_class }}">

      <div class="grid-row grid-gap">

      {% if page.sidebar_first %}
       <aside class="usa-layout-docs__sidenav desktop:grid-col-3">
         {{ page.sidebar_first }}
       </aside>
      {% endif %}

      {% if page.sidebar_second %}
       <div class="usa-layout-docs__main desktop:col-6 usa-prose region-content {{ content_class }}">
         {{ page.content }}
       </div>
       <aside class="desktop:grid-col-3">
         {{ page.sidebar_second }}
       </aside>
      {% else %}
        <div class="usa-layout-docs__main desktop:col-9 usa-prose region-content {{ content_class }}">
          {{ page.content }}
        </div>
      {% endif %}

     </div>
    </div>
   </div>

</main>


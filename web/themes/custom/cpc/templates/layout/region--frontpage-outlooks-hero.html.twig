{#
/**
 * @file
 * Theme override to display a region.
 *
 * Available variables:
 * - content: The content for this region, typically blocks.
 * - attributes: HTML attributes for the region <div>.
 * - region: The name of the region variable as defined in the theme's
 *   .info.yml file.
 *
 * @see template_preprocess_region()
 */
#}
{%
  set classes = [
    'region',
    'region-' ~ region|clean_class,
  ]
%}
{{ attach_library('interactive_outlooks/selector') }}
{# if content #}
<div class="grid-row">
  <div class="tablet:grid-col-8">
  </div>
  <div class="tablet:grid-col-4">
    <div class="outlooks-selector-container">
      <form class="usa-form" id="outlooks-selector">
        <label class="usa-label" for="outlook-options">Select an Outlook</label>
        <select class="usa-select" name="outlook-options" id="outlook-options">
          <option value>- Select an Outlook -</option>
          <option value="hazards">U.S. Hazards Outlook</option>
          <option value="drought">U.S. Drought Outlook</option>
          <option value="six10day">U.S. 6-10 Day Outlook</option>
        </select>
        <input class="usa-button" type="submit" value="Select">
      </form>
    </div>
  </div>
</div>

<div class="grid-row outlooks">
  <div class="tablet:grid-col-12 drought">
    {{ drupal_block('interactive_drought_outlooks') }}
  </div><!-- end .drought -->
  <div class="tablet:grid-col-12 hazards">
    {{ drupal_block('interactive_hazards_outlooks') }}
  </div><!-- end .hazard -->
  <div class="tablet:grid-col-12 six10day">
    {{ drupal_block('interactive_six10day_outlooks') }}
  </div><!-- end .six10day -->
</div><!-- end outer .grid-row .outlooks -->
{# endif #}
